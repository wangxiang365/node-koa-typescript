{
  "restartable": "rs",
  "ignore": [
    ".git",
    "node_modules/**",
    "app_log/**",
    ".spec.ts",
    "dist"
  ],
  "verbose": false,
  "execMap": {
    "": "node",
    "js": "node --harmony"
  },
  "events": {
    "start": "",
    "crash": "",
    "exit": "",
    "restart": ""
  },
  "ext": "js json ts tsx",
  "watch": [
    "./**"
  ],
  "legacy-watch": false,
  "exec": "ts-node  --transpile-only ./src/app.ts"
}